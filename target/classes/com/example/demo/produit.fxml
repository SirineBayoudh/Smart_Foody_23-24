<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Button?>
<AnchorPane prefHeight="698.0" prefWidth="873.0" stylesheets="@css/style_panier.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.demo.Controllers.ProduitController">
    <children>
        <!-- Navbar -->
        <HBox prefHeight="60.0" prefWidth="698.0" styleClass="navbar" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <Button styleClass="arrow-button" onAction="#navbarre">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0">
                        <image>
                            <Image url="@Images/arrow_back.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <!-- Main Content -->
        <VBox fx:id="productsContainer" styleClass="main-content" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.topAnchor="60">
            <!-- Product Grid -->
            <ScrollPane prefHeight="477.0" prefWidth="365.0" VBox.vgrow="ALWAYS">
                <GridPane fx:id="imagesGrid" prefHeight="42.0" prefWidth="100.0" />
            </ScrollPane>
        </VBox>
    </children>
</AnchorPane>

